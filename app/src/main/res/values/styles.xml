<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <!-- For a light status bar (icons and text), if preferred -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- White Material Button style -->
    <style name="WhiteMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <!-- Set stroke color and width for underline effect -->
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Custom Switch style -->
    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#00FF00</item> <!-- ON color -->
        <item name="colorSwitchThumbNormal">#FF0000</item> <!-- OFF color -->
        <item name="android:switchTextAppearance">@style/SwitchTextAppearance</item>
    </style>

    <style name="SwitchTextAppearance" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textColor">#FFFFFF</item> <!-- Text color -->
    </style>
</resources>
