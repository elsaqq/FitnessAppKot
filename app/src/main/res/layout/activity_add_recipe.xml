<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#C7E7F6">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                android:hint="Name" />

            <EditText
                android:id="@+id/ingredientsEditText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                android:hint="Ingredients "
                android:inputType="textMultiLine"
                android:minLines="3" />


            <EditText
                android:id="@+id/caloriesEditText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                android:hint="Calories"
                android:inputType="number" />

            <EditText
                android:id="@+id/FatsEditText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                android:hint="Fats"
                android:inputType="number" />

            <EditText
                android:id="@+id/ProteinEditText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                android:hint="Protein"
                android:inputType="number" />

            <EditText
                android:id="@+id/CarbosEditText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                android:hint="Carbos"
                android:inputType="number" />

            <EditText
                android:id="@+id/pictureUrlEditText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                android:hint="Picture URL"
                android:inputType="textUri" />


            <EditText
                android:id="@+id/stepsEditText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                android:hint="Steps "
                android:inputType="textMultiLine"
                android:minLines="3" />

            <EditText
                android:id="@+id/durationEditText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                android:hint="Duration" />

            <EditText
                android:id="@+id/difficultyEditText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                android:hint="Level of Difficulty" />


            <Button
                android:id="@+id/submitRecipeButton"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="20dp"
                style="@style/WhiteMaterialButton"
                android:text="Add Recipe" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
